<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/row_padding_vertical">

    <ImageView
        android:id="@+id/imageViewScroll"
        android:layout_width="184dp"
        android:layout_height="155dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/img" />

    <TextView
        android:id="@+id/viewScroll"
        android:layout_width="36dp"
        android:layout_height="35dp"
        android:layout_below="@id/imageViewScroll"
        android:layout_alignStart="@+id/imageViewScroll"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="#E91E63"
        android:text="@string/_0" />

    <TextView
        android:id="@+id/upVoteScroll"
        android:layout_width="67dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/imageViewScroll"
        android:layout_marginStart="-124dp"
        android:layout_marginTop="155dp"
        android:layout_marginBottom="53dp"
        android:layout_toEndOf="@+id/imageViewScroll"
        android:background="#E91E63"
        android:text="@string/_0"
        android:textColor="@color/year" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/viewScroll"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/viewScroll"
        android:background="#E91E63"
        android:contentDescription="@string/viewdisign"
        app:srcCompat="@drawable/ic_baseline_visibility_24" />

</RelativeLayout>